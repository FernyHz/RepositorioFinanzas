@model BonosCalculadora.Models.Calculadora

@{
    ViewData["Title"] = "Details";
}

<h1>Resultado de la estructuración del Bono</h1>
<div class="container">
    <div class="row">   
        <div class="col-sm border border-primary">
            One of three columns
        </div>
        <div class="col-sm border border-primary text-center">
            <div class="form-group row">
                <label class="col-sm-6 col-form-label text-right">Frecuencia del Cupon: </label>
                <div class="col-sm-6 text-left">
                    <label type="text" readonly class="form-control-plaintext"> @ViewBag.Frec</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label text-right">Dias de Capitalizacion: </label>
                <div class="col-sm-6 text-left">
                    <label type="text" readonly class="form-control-plaintext"> @ViewBag.Capi</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label text-right">Periodos Por Año: </label>
                <div class="col-sm-6 text-left">
                    <label type="text" readonly class="form-control-plaintext"> @ViewBag.Peri</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label text-right">Periodos Totales: </label>
                <div class="col-sm-6 text-left">
                    <label type="text" readonly class="form-control-plaintext"> @ViewBag.PeriT</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label text-right">Tasa Efectiva Anual: </label>
                <div class="col-sm-6 text-left">
                    <label type="text" readonly class="form-control-plaintext"> @ViewBag.Tasa</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label text-right">Tasa Efectiva Del Periodo: </label>
                <div class="col-sm-6 text-left">
                    <label type="text" readonly class="form-control-plaintext"> @ViewBag.TasaP</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label text-right">Cok Del Periodo: </label>
                <div class="col-sm-6 text-left">
                    <label type="text" readonly class="form-control-plaintext"> @ViewBag.CokP</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label text-right">Costes Iniciales Emisor: </label>
                <div class="col-sm-6 text-left">
                    <label type="text" readonly class="form-control-plaintext"> @ViewBag.Cie</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label text-right">Costes Iniciales Bonista: </label>
                <div class="col-sm-6 text-left">
                    <label type="text" readonly class="form-control-plaintext"> @ViewBag.Cib</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label text-right">Tir: </label>
                <div class="col-sm-6 text-left">
                    <label type="text" readonly class="form-control-plaintext"> @ViewBag.t</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label text-right">Precio Actual: </label>
                <div class="col-sm-6 text-left">
                    <label type="text" readonly class="form-control-plaintext"> @ViewBag.vna</label>
                </div>
            </div>
        </div>
    </div>
</div>

    <table class="table table-responsive table-bordered table-sm ">
        <thead>
            <tr class="table-warning">
                <th>N°</th>
                <th>Inflacion Anual</th>
                <th>Inflacion Periodo</th>
                <th>Bono</th>
                <th>Bono Indexado</th>
                <th>Cupon (Interes)</th>
                <th>Cuota</th>
                <th>Amortizacion</th>
                <th>Prima</th>
                <th>Escudo</th>
                <th>Flujo Emisor</th>
                <th>Flujo Emisor c/Escudo</th>
                <th>Flujo Bonista</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.listahi)
            {
                <tr>
                    <td>@item.numero</td>
                    <td>@item.infanual</td>
                    <td>@item.infperiodo</td>
                    <td>@item.bono</td>
                    <td>@item.bonoindexado</td>
                    <td>@item.interes</td>
                    <td>@item.cuota</td>
                    <td>@item.amort</td>
                    <td>@item.prima</td>
                    <td>@item.escudo</td>
                    <td>@item.femisor</td>
                    <td>@item.femiescu</td>
                    <td>@item.fbonista</td>
                </tr>
            }
        </tbody>
    </table>

