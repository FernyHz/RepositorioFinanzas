@model IEnumerable<BonosCalculadora.Models.MetodoPago>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Identity/Pages/_ViewStart.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoMetodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calculadora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMetodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calculadora.CalculadoraId)
            </td>
